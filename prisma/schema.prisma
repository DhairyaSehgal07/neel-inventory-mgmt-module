generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  Admin
  Manager
  Supervisor
  Worker
}

model User {
  id           Int       @id @default(autoincrement())
  name         String
  mobileNumber String   @unique
  password     String
  role         Role     @default(Worker)
  permissions  String[] @default([])
  isActive     Boolean  @default(true)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@map("users")
}

model FabricType {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  fabrics Fabric[]

  @@map("fabric_types")
}

model FabricStrength {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  fabrics Fabric[]

  @@map("fabric_strengths")
}

model FabricWidth {
  id        Int      @id @default(autoincrement())
  value     Float    // width value (e.g. in meters or inches)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  fabrics Fabric[]

  @@map("fabric_widths")
}

model Fabric {
  id               Int             @id @default(autoincrement())
  date             DateTime
  fabricDate       String
  fabricCode       String
  fabricTypeId     Int
  fabricStrengthId Int
  fabricWidthId    Int
  fabricLength     Float
  nameOfVendor     String
  gsmObserved      Float
  qrCode           String
  netWeight        Float
  gsmCalculated    Float
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  fabricType     FabricType     @relation(fields: [fabricTypeId], references: [id])
  fabricStrength FabricStrength @relation(fields: [fabricStrengthId], references: [id])
  fabricWidth    FabricWidth    @relation(fields: [fabricWidthId], references: [id])

  @@map("fabrics")
}
